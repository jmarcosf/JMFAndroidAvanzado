        <!--******************************************************/
	    /*                                                       */
	    /* Location Details Activity                             */
	    /*                                                       */
	    /*******************************************************-->
        <activity
            android:name="com.utad.marcos.jorge.practicaandroidavanzado.CLocationDetailsActivity"
            android:parentActivityName="com.utad.marcos.jorge.practicaandroidavanzado.CMainActivity" >
